<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blackBishop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="261dp"
        app:srcCompat="@drawable/blackbishop" />

    <ImageView
        android:id="@+id/blackKnight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/blackRook"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/blackknight" />

    <ImageView
        android:id="@+id/blackRook"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/blackQueen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="76dp"
        app:srcCompat="@drawable/blackrook" />

    <ImageView
        android:id="@+id/blackQueen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="82dp"
        app:srcCompat="@drawable/blackqueen" />
</RelativeLayout>